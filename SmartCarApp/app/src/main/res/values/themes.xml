<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="lightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baby_blue</item>
        <item name="colorPrimaryVariant">@color/baby_blue</item>
        <item name="colorOnPrimary">@color/Red_tester</item>
        <item name="icon_color">@color/Red_tester</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/switch_colour</item>
        <item name="colorSecondaryVariant">@color/Red_tester</item>
        <item name="colorOnSecondary">@color/Red_tester</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="9">?attr/colorPrimaryVariant</item>
        <item name="background_color">#FFFFFF</item>
        <item name="text_color">@color/black</item>
        <item name="android:navigationBarColor">?attr/background_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="darkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_mode</item>
        <item name="colorPrimaryVariant">@color/dark_mode</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baby_blue</item>
        <item name="colorSecondaryVariant">@color/baby_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="9">@color/dark_mode</item>
        <item name="background_color">@color/dark_mode</item>
        <item name="text_color">@color/white</item>
        <item name="icon_color">@color/baby_blue</item>
        <item name="android:navigationBarColor">@color/dark_mode</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>